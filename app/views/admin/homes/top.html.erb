<main>
  <div class="container">
    <div class="row">
      <div class="col">
        <h3>注文履歴一覧</h3>
        <table class="table">
          <thead>
            <tr>
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文個数</th>
              <th>注文ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% total_amount = 0 %>
            <% @orders.each do |order| %>
            <tr>
              <td>
                <%= link_to admin_order_path(order) do %>
                  <%= order.created_at %>
                <% end %>
              </td>
              <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
              <td>
                <% order.order_details.each do |order_detail| %>
                  <% total_amount += order_detail.amount %>
                <% end %>
                <%= total_amount %>
              </td>
              <td><%= order.order_status_i18n %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>