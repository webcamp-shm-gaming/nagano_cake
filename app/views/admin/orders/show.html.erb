<main>
  <div class="container">
    <div class="row">
      <div class="col">
        <h3>注文履歴詳細</h3>
        <div>購入者</div><div><%= @customer.last_name %><%= @customer.first_name %></div>
        <div>注文日</div><div><%= @order.created_at %></div>
        <div>配送先</div>
        <div>
          <%= @order.delivery_post_code %><%= @order.delivery_address %><br />
          <%= @order.delivery_name %><br />
        </div>
        <div>支払方法</div><div><%= @order.pay_type_i18n %></div>
        <div>注文ステータス</div>
        <div>
          <%= form_with model: @order, url: admin_order_path(@order) do |f| %>
            <%= f.select :order_status, Order.order_statuses_i18n.invert %>
            <%= f.submit "更新" %>
          <% end %>
        </div>
        <table class="table">
          <thead>
            <tr>
              <th>商品名</th>
              <th>単価（税込）</th>
              <th>数量</th>
              <th>小計</th>
              <th>製作ステータス</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @order_details.each do |order_detail| %>
            <tr>
              <td>
                <%= order_detail.item.name %>
              </td>
              <td>
                <%= order_detail.item.price %>
              </td>
              <td>
                <%= order_detail.amount %>
              </td>
              <td><%= order_detail.subtotal %></td>
              <%= form_with model: order_detail, url: admin_order_detail_path(order_detail), method: :patch do |f| %>
              <td>
                <%= f.select :create_status, OrderDetail.create_statuses_i18n.invert %>
              </td>
              <td><%= f.submit "更新" %></td>
              <% end %>
            </tr>
            <% end %>
          </tbody>
        </table>
        <div>商品合計</div><div><%= @order.bill - 800 %>円</div>
        <div>送料</div><div><%= @order.postage %>円</div>
        <div>請求金額</div><div><%= @order.bill %>円</div>
      </div>
    </div>
  </div>
</main>