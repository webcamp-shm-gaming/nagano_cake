<div>
  <h1>ジャンル一覧・追加</h1>
  <%= form_with model:@genre, local:true do |f| %>
    <div>
      <label for="genre_name">ジャンル名</label>
      <%= f.text_field :name, autofocus: true, id: "genre_name", placeholder: "ジャンル名", class: "form-control name" %>
    </div>
    <div>
      <%= f.submit "Create Genre", class: 'btn btn-success' %>
    </div>
  <% end %>
 <%= form_with model:@genre, local:true do |f| %>
  <table>
    <tbody>
      <tr>
        <%= genre.name %>
      </tr>
      <tr>
        <%= f.submit "Update Genre", class: 'btn btn-success' %>
      </tr>
    </tbody>
  </table>
 <% end %>
</div>