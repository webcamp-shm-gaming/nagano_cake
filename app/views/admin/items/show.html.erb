 <h2>商品詳細</h2>
 <div class="container">
  <div class="row">
    <div>
      <div class="col-4">
      <p><%= image_tag @item.image, size:"500x500" %></p>
      </div>
    </div>
     <div class="col-md-4">
      <div class="form-group">
      <p>商品名 <%= @item.name %></p>
      </div>
      <div class="form-group">
      <p>商品説明文 <%= @item.introduction %></p>
      </div>
      <div class="form-group">
      <p>ジャンル <%= @item.genre.name %></p>
      </div>
      <div class="form-group">
      <p>税込価格(税抜価格) <%= @item.with_tax_price.to_s(:delmited) %>(<%= @item.price %>)円</p>
      </div>
      <div class="form-group">
      <p>
        販売ステータス
        <% if @item.is_active %>
         <%= link_to "販売中", admin_item_path(@item.id, post: {is_actived: true}), method: :put %>
        <% else %>
         <%= link_to "販売停止中", admin_item_path(@item.id, post: {is_actived: false}), method: :put %>
        <% end %>
      </p>
      </div>
      <div class="form-group">
        <%= link_to '編集する', edit_admin_item_path(@item.id), class: 'btn btn-success' %>
      </div>
     </div>
  </div>
 </div>
