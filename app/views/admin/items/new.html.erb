<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">>
      <div class="form-group">
        <h1>商品新規登録</h1>
      <%= form_with model: @item, url: admin_items_path(@item.id), method: :post do |f| %>
      <%= render 'admin/items/errors', item: @item %>
      <div class="form-group">
       <label for="item_image">商品画像</label>
       <%= f.file_field :image, placeholder: "商品画像", class: 'form-control-file item_image', accept: "image/*" %>
      </div>
       <div class="form-group">
         <label for="item_name">商品名</label>
         <%= f.text_field :name, autofocus: true, id: "item_name", placeholder: "名前", class: 'form-control name' %>
       </div>
       <div class="form-group">
         <label for="item_introduction">商品説明</label>
         <%= f.text_area :introduction, placeholder: "商品説明", class: 'form-control introduction' %>
       </div>
       <div class="form-group">
         <label for="item_genre">ジャンル</label>
         <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
       </div>
       <div class="form-group">
         <label for="item_price">税抜価格</label>
         <%= f.number_field :price, placeholder: "1000", class: 'form-control price' %>円
       </div>
       <div class="form-group">
         <label for="item_is_active">販売ステータス</label>
          <%= f.radio_button :is_active, "true" %>
          <%= f.label :is_active, "販売中" %>
          <%= f.radio_button :is_active, "false" %>
          <%= f.label :is_active, "販売停止中" %>
       </div>
       <div class="form-group">
         <%= f.submit '新規登録', class: 'btn btn-success' %>
       </div>
      <% end %>
      </div>
    </div>
  </div>
</div>