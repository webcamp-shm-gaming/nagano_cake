<div class="container my-4">
 <div class="row">
  <div class="offset-5">
   <h3>配送先登録/一覧</h3>
  </div>
 </div>

 <div class="row">
  <div class="offset-4 col-4">
   <%= form_with model: @delivery, url:deliveries_path do |f| %>
    <div class="form-group mt-3">
     <%= f.label :"郵便番号（ハイフンなし）", class: "brown-border px-3" %>
     <%= f.text_field :post_code, placeholder:"例:000000", autofocus: true, autocomplete: "email", class: "form-control ml-3" %>
    </div>
    <div class="form-group mt-2">
     <%= f.label :"住所", class: "brown-border px-3" %>
    <%= f.text_field :address, placeholder:"例:東京都渋谷区代々木神園町0-0", autofocus: true, autocomplete: "email", class: "form-control ml-3 col-12" %>
    </div>
    <div class="form-group mt-2">
     <%= f.label :"宛名", class: "brown-border px-3" %>
     <%= f.text_field :address_name, placeholder:"例:令和 道子", autofocus: true, autocomplete: "email", class: "form-control ml-3 col-12" %>
    </div>
    <div class="form-group mt-2">
     <%= f.submit "新規登録", class:"btn btn-success ml-3" %>
    </div>
   <% end %>
  </div>
 </div>

 <table class="table table-bordered mt-1">
  <thead>
    <tr class="info">
      <th style="width: 10%">郵便番号</th>
      <th style="width: 30%">住所</th>
      <th style="width: 20%">宛名</th>
    </tr>
  </thead>
  <tbody>
    <% @deliveries.each do |delivery| %>
      <tr>
        <td><%= delivery.post_code %></td>
        <td><%= delivery.address %></td>
        <td><%= delivery.address_name %></td>
        <td>
          <%= link_to "編集する", edit_delivery_path(delivery), class: 'btn btn-sm btn-primary' %>
          <%= link_to "削除する", delivery_path(delivery), method: :delete, data: {confirm: "削除しますか？"}, class: 'btn btn-sm btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
 </table>
</div>