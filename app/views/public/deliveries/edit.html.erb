
<div class="container my-4">
 <div class="row">
  <div class="offset-5">
   <h3>配送先編集</h3>
  </div>
 </div>

 <div class="row">
  <div class="offset-4 col-4">
   <%= form_with model: @delivery, url:delivery_path(@delivery), method: :patch, local: true do |f| %>
    <div class="form-group mt-3">
     <%= f.label :"郵便番号（ハイフンなし）", class: "brown-border px-3" %>
     <%= f.text_field :post_code,  autofocus: true, autocomplete: "email", class: "form-control ml-3 col-12" %>
    </div>
    <div class="form-group mt-3">
     <%= f.label :"住所", class: "brown-border px-3" %>
     <%= f.text_field :address,  autofocus: true, autocomplete: "email", class: "form-control ml-3 col-12" %>
    </div>
    <div class="form-group mt-3">
     <%= f.label :"宛名", class: "brown-border px-3" %>
     <%= f.text_field :address_name,  autofocus: true, autocomplete: "email", class: "form-control ml-3 col-12" %>
    </div>
    <div class="form-group mt-4">
     <%= f.submit "変更内容を保存", class:"btn btn-success ml-3" %>
    </div>
   <% end %>
  </div>
 </div>
</div>