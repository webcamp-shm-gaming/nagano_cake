<h3>配送先編集</h3>

<%= form_with model: @delivery, url:delivery_path(@delivery), method: :patch, local: true do |f| %>
 <div class="form-group">
  <%= f.label :"郵便番号（ハイフンなし）", class: "brown-border px-3" %><br />
  <%= f.text_field :post_code,  autofocus: true, autocomplete: "email" %>
 </div>
 <div class="form-group">
  <%= f.label :"住所", class: "brown-border px-3" %><br />
  <%= f.text_field :address,  autofocus: true, autocomplete: "email" %>
 </div>
 <div class="form-group">
  <%= f.label :"宛名", class: "brown-border px-3" %><br />
  <%= f.text_field :address_name,  autofocus: true, autocomplete: "email" %>
 </div>
 </div>
  <%= f.submit "変更内容を保存" %>
 </div>
<% end %>
