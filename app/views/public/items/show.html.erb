<div>
   <%= image_tag @item.image, size: "200x200" %>
  <h2><%= @item.name %></h2>
  <p><%= @item.introduction %></p>
　<span>￥<%= @item.price.to_s(:delimited) %>（税込）</span>
　<p><%= form_with model: @item, url: cart_items_path do |f| %>
　     <%= f.select :amount, *[1..5] %>
　     <%= f.submit "カートに入れる", class: "btn btn-sucess" %>
　   <% end %>
　</p>
</div>
