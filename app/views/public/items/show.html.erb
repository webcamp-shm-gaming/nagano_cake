<div>
   <%= image_tag @item.image, size: "200x200" %>
  <h2><%= @item.name %></h2>
  <p><%= @item.introduction %></p>
  <span>￥<%= @item.with_tax_price.to_s(:delimited) %>（税込）</span>
     <%= form_with model: @cart_item, url: cart_items_path do |f| %>
      <%= f.select :amount, *[1..5] %>
      <!--item_idというキーに対して@item.idという値をブラウザに表示せずに送信-->
      <%= f.hidden_field :item_id, :value => @item.id %>
      <%= f.submit "カートに入れる", class: "btn btn-sucess" %>
     <% end %>
</div>
