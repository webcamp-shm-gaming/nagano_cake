<main>
  <div class="container">
    <div class="row">
      <div class="col">
        <h3>会員情報編集</h3>
        <%= form_with model: @customer, url: customers_path do |f| %>
          <div>氏名<%= f.text_field :last_name %> <%= f.text_field :first_name %></div>
          <div>フリガナ<%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %></div>
          <div>住所<%= f.text_field :address %></div>
          <div>電話番号<%= f.text_field :phone_number %></div>
          <div>メールアドレス<%= f.text_field :email %></div>
          <div class="form-group"><%= f.submit "編集内容を保存", class: "btn btn-success" %></div><div><%= link_to "退会する", customers_unsubscribe_path(@customer), class: "btn btn-danger" %></div>
        <% end %>
      </div>
    </div>
  </div>
</main>