<div class="container my-5">
  <h3>マイページ</h3>

  <div class="row mt-3">
   <h4>登録情報</h4>
   <div class="offset-1">
    <%= link_to "編集する" , edit_customers_path, class:"btn btn-sm btn-success" %>
   </div>
  </div>

  <table class="table-bordered mt-3">
    <tbody>
      <tr>
        <th>氏名</th>
        <th><%= @customer.first_name %> <%= @customer.last_name %></th>
      </tr>
      <tr>
        <th>カナ</th>
        <th><%= @customer.first_name_kana %> <%= @customer.last_name_kana %></th>
      </tr>
      <tr>
        <th>郵便番号</th>
        <th><%= @customer.post_code %></th>
      </tr>
      <tr>
        <th>住所</th>
        <th><%= @customer.address %></th>
      </tr>
      <tr>
        <th>電話番号</th>
        <th><%= @customer.phone_number %></th>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <th><%= @customer.email %></th>
      </tr>
    </tbody>
  </table>


  <div class="row mt-4">
    <h4>配送先</h4>
    <div class="offset-1 col-6">
     <%= link_to "一覧を見る", deliveries_path(@customer), class:"btn btn-sm btn-primary" %>
    </div>
  </div>
  <div class="row mt-4">
    <h4>注文履歴</h4>
    <div class="offset-1">
     <%= link_to "一覧を見る",orders_path, class:"btn btn-sm btn-primary" %>
     </div>
  </div>
</div>
