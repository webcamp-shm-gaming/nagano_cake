<main>
  <div class="container">
    <div class="row">
      <div class="col">
        <div>登録情報</div><div><%= link_to "編集する" , edit_customers_path, class: "btn btn-success" %></div>
        <table class="table">
          <tbody>
            <tr>
              <th>氏名</th>
              <th><%= @customer.last_name %>  <%= @customer.first_name %></th>
            </tr>
            <tr>
              <th>カナ</th>
              <th><%= @customer.last_name_kana %>  <%= @customer.first_name_kana %></th>
            </tr>
            <tr>
              <th>郵便番号</th>
              <th><%= @customer.post_code %></th>
            </tr>
            <tr>
              <th>住所</th>
              <th><%= @customer.address %></th>
            </tr>
            <tr>
              <th>電話番号</th>
              <th><%= @customer.phone_number %></th>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <th><%= @customer.email %></th>
            </tr>
          </tbody>
        </table>
        <div class="form-group mt-3">配送先<%= link_to "一覧を見る", deliveries_path(@customer), class: "btn btn-primary" %></div>
        <div class="form-group mt-3">注文履歴<%= link_to "一覧を見る",orders_path, class: "btn btn-primary" %></div>
