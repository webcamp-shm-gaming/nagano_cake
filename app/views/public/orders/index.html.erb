<div class="container mt-2">
  <div class="row justify-content-center ">
    <h3>注文履歴一覧</h3>
    <table class="table table-bordered table-condensed mt-2">
      <thead>
        <tr class="info">
          <th style="width: 20%">注文日</th>
          <th style="width: 40%">配送先</th>
          <th style="width: 10%">注文商品</th>
          <th style="width: 10%">支払金額</th>
          <th style="width: 10%">ステータス</th>
          <th style="width: 10%">注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td>
              <%= order.created_at %>
            </td>
            <td>
              <%= order.delivery_post_code %><br />
              <%= order.delivery_address %><br />
              <%= order.customer.first_name %> <%= order.customer.last_name %> <br />
            </td>
            <td>
              <div>
                <% order.order_details.each do |order_detail| %>
                <%= order_detail.item.name %><br />
                <% end %>
              </div>
            </td>
            <td><%= order.bill %></td>
            <td><%= order.order_status_i18n %></td>
            <td><%= link_to "表示する", order_path(order), class: 'btn btn-sm btn-primary'%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
</main>