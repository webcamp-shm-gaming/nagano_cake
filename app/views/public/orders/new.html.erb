<main>
  <div class="container">
    <div class="row">
      <div class="col">
        <h3>注文情報入力</h3>
        <div>お支払方法</div>
        <div>
          <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
          <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>

          <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
          <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
        </div>
        <div>お届け先</div>
        <div>
          <%= form_with model: @order, url:orders_path do |f| %>
            <%= f.radio_button :select_address, Order.select_addresses.key(0) %>
            <%= f.label :select_address, "ご自身の住所" %>
            #{current_customer.adress.to_s}

            <%= f.radio_button :select_address, Order.select_addresses.key(1) %>
            <%= f.label :select_address, "登録済住所から選択" %>
            <%= f.select :delivery_id, options_from_collection_for_select(Delivery.all, :id, :delivery_display) %>

            <%= f.radio_button :select_address, Order.select_addresses.key(2) %>
            <%= f.label :select_address, "新しいお届け先" %>
            <%= form_with model: @delivery, url:deliveries_path do |f| %>
              <div class="form-group">
              <%= f.label :"郵便番号（ハイフンなし）", class: "brown-border px-3" %><br />
              <%= f.text_field :post_code, placeholder:"000000", autofocus: true, autocomplete: "email" %>
              </div>
              <div class="form-group">
              <%= f.label :"住所", class: "brown-border px-3" %><br />
              <%= f.text_field :address, placeholder:"東京都渋谷区代々木神園町0-0", autofocus: true, autocomplete: "email" %>
              </div>
              <div class="form-group">
              <%= f.label :"宛名", class: "brown-border px-3" %><br />
              <%= f.text_field :address_name, placeholder:"令和 道子", autofocus: true, autocomplete: "email" %>
              </div>
              </div>
              <%= f.submit "新規登録" %>
              </div>
            <% end %>
          <% end %>
        </div>
        <%= link_to "確認画面へ進む", deliveries_path(@customer) %>
      </div>
    </div>
  </div>
</main>