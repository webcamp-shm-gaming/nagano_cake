<%= flash[:error] %>
<div class="container my-4">
  <div class="row">
   <div class="offset-1">
    <h3>ログイン</h3>
   </div>
  </div>

  <div class="row">
   <div class="offset-2 mt-2">
    <h4>会員の方はこちらからログイン</h4>
   </div>
  </div>

  <div class="row">
    <div class="offset-4 col-4">
     <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group mt-3">
       <%= f.label :メールアドレス, class: "label" %>
       <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "email", class: "form-control offset-1 col-10" %>
      </div>

      <div class="form-group mt-3">
       <%= f.label :パスワード %>
       <%= f.password_field :password, autocomplete: "current-password", :placeholder => "password", class: "form-control offset-1 col-10" %>
      </div>

      <div class="form-group mt-4">
       <%= f.submit "ログイン", class:"btn btn-primary" %>
      </div
     <% end %>
    </div>
  </div>

  <div class="row">
   <div class="offset-2 mt-3">
    <h4>会員登録がお済みでない方</h4>
   </div>
  </div>

  <div class="row">
    <div class="offset-4 mx-auto mt-5">
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>
