<div class="container my-4">
 <div class="row">
  <div>
   <h3>ショッピングカート</h3>
  </div>
  <div class="offset-5">
    <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, data: {confirm: "削除しますか？"}, class: 'btn btn-sm btn-danger' %>
  </div>


  <table class="table table-bordered mt-1">
   <thead>
    <tr>
      <th style="width: 30%">商品名</th>
      <th style="width: 20%">単価（税込）</th>
      <th style="width: 20%">数量</th>
      <th style="width: 20%">小計</th>
      <th style="width: 10%"></th>
    </tr>
     <!--合計金額totalの初期化-->
     <% total = 0 %>
   </thead>
   <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <!--変数cart_itemの商品名:itemsテーブルのnameカラム-->
        <td><%= cart_item.item.name %></td>
        <!--変数cart_itemに紐づく商品の税込み単価：item.with_tax_priceはitemモデル内に記述した消費税を求めるメソッド-->
        <td><%= cart_item.item.with_tax_price %></td>
        <td>
         <%= form_with model: cart_item do |f| %>
          <div class="row ml-auto">
            <%= f.select :amount, *[1..9] %>
            <%= f.submit "変更", class:'btn btn-sm ml-2 btn-success' %>
          </div>
         <% end %>
        </td>
        <td><%= cart_item.subtotal %></td>
        <td>
          <%= link_to "削除する", delivery_path(cart_item), method: :delete, data: {confirm: "削除しますか？"}, class: 'btn btn-sm btn-danger' %>
        </td>
      </tr>
        <% total += cart_item.subtotal %>
    <% end %>
   </tbody>
  </table>
  <div class="col-xs-3 pull-right billing">
   <table class="table table-bordered ">
    <th>合計金額</th>
    <td><%= total %>円</td>
   </table>
  </div>
  <div class="my-5 offset-2">
    <%= link_to "買い物を続ける", items_path, class:"btn btn-primary" %>
    <%= link_to "情報入力に進む", new_order_path, class:"btn btn-success ml-3" %>
  </div>

 </div>
</div>