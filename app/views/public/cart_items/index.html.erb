<h3>ショッピングカート</h3>
<%= button_to "カートを空にする", destroy_all_cart_items_path, method: :delete, data: {confirm: "削除しますか？"} %>
<table class='table mt-4'>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
     <!--合計金額totalの初期化-->
     <% total = 0 %>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <!--変数cart_itemの商品名:itemsテーブルのnameカラム-->
        <td><%= cart_item.item.name %></td>
        <!--変数cart_itemに紐づく商品の税込み単価：item.with_tax_priceはitemモデル内に記述した消費税を求めるメソッド-->
        <td><%= cart_item.item.with_tax_price %></td>
        <td><%= cart_item.amount %></td>
        <%= form_with model: cart_item do |f| %>
          <div class="row">
            <%= f.select :amount, *[1..9] %>
            <%= f.submit "変更" %>
          </div>
        <% end %>
        </td>
        <td><%= cart_item.subtotal %></td>
        <td>
          <%= button_to "削除する", delivery_path(cart_item), method: :delete, data: {confirm: "削除しますか？"} %>
        </td>
      </tr>
        <% total += cart_item.subtotal %>
    <% end %>
  </tbody>
</table>
<tr>
    <th>合計金額</th>
    <td><%= total %></td>
</tr>
<%= link_to "買い物を続ける", items_path %>
<%= link_to "情報入力に進む", new_order_path %>